# Server Configuration
PORT=5000

# Database Configuration
# PostgreSQL connection string (e.g., postgresql://user:password@host:port/database)
DATABASE_URL=postgresql://user:password@localhost:5432/ticketing_db
# Set to 'true' if your database requires SSL (e.g., cloud providers like Neon, Supabase)
DATABASE_SSL=false

# JWT Secret Key
# Generate a strong random secret for production (e.g., using: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (for sending notifications)
# Email service provider (e.g., 'gmail', 'outlook', 'smtp')
EMAIL_SERVICE=gmail
# Email address used for sending notifications
EMAIL_USER=your-email@example.com
# Email password or app-specific password
EMAIL_PASS=your-email-password
